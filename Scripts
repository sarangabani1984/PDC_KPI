SELECT
CHANGE_NO,
ORIGINATOR,
CHANGE_ANALYST,
PRODUCT_NAMES,
CCB_SUBMIT_DATE,
ECO_REPORTING,
REASON_CODE,
REASON_CODE_DETAILS,
WORKFLOW_NAME,
TAB_SUBMIT_DATE,
ECO_SUBMIT_DATE,

FROM EDP_DB.EDP_VIEW.ENGINEERING_CHANGE_ORDER_V AS E LEFT JOIN EDP_DB.EDP_VIEW.MANUFACTURING_CHANGE_ORDER_V AS M



SELECT
    CHANGE_ANALYST,
    CHANGE_NO,
    CHANGE_DESCRITPION,
    REASON_FOR_CHANGE,
    CCB_SUBMIT_DATE
FROM EDP_DB.EDP_VIEW.ENGINEERING_CHANGE_ORDER_V 
WHERE CHANGE_STATUS = 'CCB'
UNION
SELECT
    CHANGE_ANALYST,
    CHANGE_NO,
    CHANGE_DESCRITPION,
    REASON_FOR_CHANGE,
    CCB_SUBMIT_DATE
FROM EDP_DB.EDP_VIEW.MANUFACTURING_CHANGE_ORDER_V 
WHERE CHANGE_STATUS = 'CCB'
UNION
SELECT
    CHANGE_ANALYST,
    CHANGE_NUMBER AS CHANGE_NO,
    DESCRIPTION_OF_CHANGE AS CHANGE_DESCRITPION,
    REASON_FOR_DEVIATION AS REASON_FOR_CHANGE,
    CCB_SUBMIT_DATE
FROM EDP_DB.EDP_VIEW.DM_DEV_DETAILS_V 
WHERE CHANGE_STATUS = 'CCB'
